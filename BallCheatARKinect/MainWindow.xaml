<Window x:Name="frmMain" x:Class="BallCheatARKinect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BallCheatARKinect"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="850" Loaded="frmMain_Loaded" Closing="frmMain_Closing" MouseDown="frmMain_MouseDown" WindowStyle="None">
    <Grid>
        <Image x:Name="imgOut" HorizontalAlignment="Left" Height="480" Margin="10,10,0,0" VerticalAlignment="Top" Width="640"/>
        <StackPanel x:Name="pnlSetting" HorizontalAlignment="Left" Height="350" Margin="655,10,0,0" VerticalAlignment="Top" Width="177">
            <TextBlock x:Name="txtDepthMin" TextWrapping="Wrap" Text="Depth Min"/>
            <Slider x:Name="sldDepthMin"/>
            <TextBlock x:Name="txtDepthMax" TextWrapping="Wrap" Text="Depth Max"/>
            <Slider x:Name="sldDepthMax"/>
            <TextBlock x:Name="txtBlobSizeMin" TextWrapping="Wrap" Text="BlobSizeMin"/>
            <Slider x:Name="sldBlobSizeMin"/>
            <TextBlock x:Name="txtBlobSizeMax" TextWrapping="Wrap" Text="BlobSizeMax"/>
            <Slider x:Name="sldBlobSizeMax"/>
            <Button x:Name="btnExit" Content="Close" Click="btnExit_Click"/>
        </StackPanel>
        <TextBox x:Name="txtLog" TextWrapping="Wrap" Text="Log" Margin="655,365,10,10"/>

    </Grid>
</Window>
